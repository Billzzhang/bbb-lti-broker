<div class="px-24 py-12">
    <div class="flex justify-between">
        <div class="pb-8 border-b-2">
            <p class="text-4xl font-semibold">LTI 1.1 Keys<p>
            <p id="notice" class="font-md"><%= notice %></p>
        </div>
        <div>
            <div class="mt-8 flex justify-center">
                <div class="inline-flex rounded-md bg-blue-500 shadow">
                    <!-- Trigger the modal with a button -->
                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addModal">Add a Key</button>

                    <!-- Modal -->
                    <div class="modal fade" id="addModal" role="dialog">
                        <div class="modal-dialog">
                        
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header text-left">
                                <h4 class="modal-title">Enter Below</h4>
                            </div>
                            <div class="modal-body">
                                <%=form_tag admin_submit_key_path do |form|%>
                                    <div>
                                        <div class="border mb-2">
                                            <%= text_field_tag :key, "", class: "w-full h-10 pl-2", placeholder: "Key", required: true %>
                                        </div>
                                        <div class="border mb-2">
                                            <%= text_field_tag :secret, "", class: "w-full h-10 pl-2", placeholder: "Secret", required: true %>
                                        </div>
                                        <div class = "border">
                                            <%= text_field_tag :tenant, "", class: "w-full h-10 pl-2", placeholder: "Tenant (Optional)" %>
                                        </div>
                                        <div class="border-t-2 border-grey-200 border-opacity-50 flex w-full mt-3 pt-2">
                                            <%= submit_tag "Submit" %>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pt-8">
        <table class="table-fixed">
            <thead>
                <tr>
                    <th class="w-1/3">Key</th>
                    <th class="w-1/4">Secret</th>
                    <th class="w-1/4">Tenant</th>
                    <th class="w-1/4">Options</th>
                </tr>
            </thead>
            <tbody>
                <% @keys.each do |key|%>
                    <tr>
                        <td><%= key["uuid"] %></td>
                        <td><%= key["shared_secret"]%></td>
                        <td><%= key["tenant"]%></td>
                        <td>
                            <% edit_modal_id = "editModal#{key["uuid"]}"%>
                            <% delete_modal_id = "deleteModal#{key["uuid"]}"%>
                            
                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#<%=edit_modal_id%>">Edit</button>
                            <div class="modal fade" id="<%=edit_modal_id%>" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header text-left">
                                            <h4 class="modal-title">Enter Below</h4>
                                        </div>
                                        <div class="modal-body">
                                            <%=form_tag admin_edit_key_path do |form|%>
                                                <div>
                                                    <div class="border mb-2">
                                                        <%= text_field_tag :key, "", class: "w-full h-10 pl-2", value: key["uuid"], readonly: true %>
                                                    </div>
                                                    <div class="border mb-2">
                                                        <%= text_field_tag :secret, "", class: "w-full h-10 pl-2", placeholder: "Secret", required: true %>
                                                    </div>
                                                    <div class = "border">
                                                        <%= text_field_tag :tenant, "", class: "w-full h-10 pl-2", placeholder: "Tenant (Optional)" %>
                                                    </div>
                                                    <div class="border-t-2 border-grey-200 border-opacity-50 flex w-full mt-3 pt-2">
                                                        <%= submit_tag "Submit" %>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#<%=delete_modal_id%>">Delete</button>
                            <div class="modal fade" id="<%=delete_modal_id%>" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header text-left">
                                            <h4 class="modal-title">Confirmation</h4>
                                        </div>
                                        <div class="modal-body">
                                            <%=form_tag admin_delete_key_path do |form|%>
                                                <div>
                                                    <p>Are you sure you want to delete key "<%=key["uuid"]%>"?</p>
                                                    <%= hidden_field_tag 'key', key["uuid"]%>
                                                    <div class="border-t-2 border-grey-200 border-opacity-50 flex w-full mt-3 pt-2">
                                                        <%= submit_tag "Delete" %>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>