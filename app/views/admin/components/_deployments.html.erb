<div class="px-24 py-12">
    <div class="flex justify-between">
        <div class="pb-8 border-b-2">
            <p class="text-4xl font-semibold">LTI 1.3 Deployments<p>
            <p id="notice" class="font-md"><%= notice %></p>
        </div>
        <div>
            <div class="mt-8 flex justify-center">
                <div class="inline-flex rounded-md bg-blue-500 shadow">
                    <!-- Trigger the modal with a button -->
                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addModal">New Deployment</button>

                    <!-- Modal -->
                    <div class="modal fade" id="addModal" role="dialog">
                        <div class="modal-dialog modal-xl">
                        
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header text-left">
                                <h4 class="modal-title">Enter Below</h4>
                            </div>
                            <div class="modal-body">
                                <%= render 'registration/starter_info', :app => @app, :apps => @apps, :temp_key_token => @temp_key_token, :jwk => @jwk, :redirect_uri => @redirect_uri, :public_key => @public_key %>
                                <%=form_tag admin_submit_deployment_path do |form|%>
                                    <div class="mt-3">
                                        <div class="border mb-2">
                                            <%= text_field_tag :iss, "", class: "w-full h-10 pl-2", placeholder: "Issuer (Required)", required: true %>
                                        </div>
                                        <div class="border mb-2">
                                            <%= text_field_tag :client_id, "", class: "w-full h-10 pl-2", placeholder: "Client ID" %>
                                        </div>
                                        <div class="border mb-2">
                                            <%= text_field_tag :key_set_url, "", class: "w-full h-10 pl-2", placeholder: "Key set URL" %>
                                        </div>
                                        <div class="border mb-2">
                                            <%= text_field_tag :auth_token_url, "", class: "w-full h-10 pl-2", placeholder: "Auth Token URL" %>
                                        </div>
                                        <div class = "border">
                                            <%= text_field_tag :auth_login_url, "", class: "w-full h-10 pl-2", placeholder: "Auth Login URL" %>
                                        </div>
                                        <%= hidden_field_tag 'public_key_path', @public_key_file.path %>
                                        <%= hidden_field_tag 'private_key_path', @private_key_file.path %>
                                        <div class="border-t-2 border-grey-200 border-opacity-50 flex w-full mt-3 pt-2">
                                            <%= submit_tag "Submit" %>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pt-8">
        <table class="table-fixed">
            <thead>
                <tr>
                    <th class="w-1/3">Issuer</th>
                    <th class="w-1/4">Client ID</th>
                    <th class="w-1/4">Options</th>
                </tr>
            </thead>
            <tbody>
                <% @registrations.each do |registration|%>
                    <tr>
                        <% registration = JSON.parse(registration) %>
                        <td><%= registration["issuer"] %></td>
                        <td><%= registration["client_id"] %></td>
                        <td>
                            <% option_modal_id = "optionModal#{registration["client_id"]}"%>
                            <% edit_modal_id = "editModal#{registration["client_id"]}"%>
                            <% delete_modal_id = "deleteModal#{registration["client_id"]}"%>

                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#<%=option_modal_id%>">Extra</button>
                            <div class="modal fade" id="<%=option_modal_id%>" role="dialog">
                                <div class="modal-dialog modal-xl">
                                    <div class="modal-content">
                                        <div class="modal-header text-left">
                                            <h4 class="modal-title">Registration URLs and Key location</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p class="font-semibold"> Key Set URL: </p>
                                            <%= registration["key_set_url"] %>
                                            <p class="font-semibold"> Auth Token URL: </p>
                                            <%= registration["auth_token_url"] %>
                                            <p class="font-semibold"> Auth Login URL: </p>
                                            <%= registration["auth_login_url"] %>
                                            <p class="font-semibold"> Tool Private Key: </p>
                                            <%= registration["tool_private_key"] %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#<%=edit_modal_id%>">Edit</button>
                            <div class="modal fade" id="<%=edit_modal_id%>" role="dialog">
                                <div class="modal-dialog modal-xl">
                                    <div class="modal-content">
                                        <div class="modal-header text-left">
                                            <h4 class="modal-title">Registration URLs and Key location</h4>
                                        </div>
                                        <div class="modal-body">
                                            <%=form_tag admin_submit_deployment_path do |form|%>
                                                <div class="mt-3">
                                                    <%= hidden_field_tag(:reg_id, registration["issuer"]) %>
                                                    <div class="border mb-2">
                                                        <%= text_field_tag :iss, "", class: "w-full h-10 pl-2", value: registration["issuer"], readonly: true %>
                                                    </div>
                                                    <div class="border mb-2">
                                                        <%= text_field_tag :client_id, "", class: "w-full h-10 pl-2", value: registration["client_id"], placeholder: "Client ID" %>
                                                    </div>
                                                    <div class="border mb-2">
                                                        <%= text_field_tag :key_set_url, "", class: "w-full h-10 pl-2", value: registration["key_set_url"], placeholder: "Key set URL" %>
                                                    </div>
                                                    <div class="border mb-2">
                                                        <%= text_field_tag :auth_token_url, "", class: "w-full h-10 pl-2", value: registration["auth_token_url"], placeholder: "Auth Token URL" %>
                                                    </div>
                                                    <div class = "border">
                                                        <%= text_field_tag :auth_login_url, "", class: "w-full h-10 pl-2", value: registration["auth_login_url"], placeholder: "Auth Login URL" %>
                                                    </div>
                                                    <div class="border-t-2 border-grey-200 border-opacity-50 flex w-full mt-3 pt-2">
                                                        <%= submit_tag "Submit" %>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#<%=delete_modal_id%>">Delete</button>
                            <div class="modal fade" id="<%=delete_modal_id%>" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header text-left">
                                            <h4 class="modal-title">Confirmation</h4>
                                        </div>
                                        <div class="modal-body">
                                            <%=form_tag admin_delete_deployment_path do |form|%>
                                                <div>
                                                    <p>Are you sure you want to delete issuer "<%=registration["issuer"]%>"?</p>
                                                    <%= hidden_field_tag 'reg_id', registration["issuer"]%>
                                                    <div class="border-t-2 border-grey-200 border-opacity-50 flex w-full mt-3 pt-2">
                                                        <%= submit_tag "Delete" %>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>